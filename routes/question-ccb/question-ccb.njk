{% extends "base.njk" %}

{% block content %}

    
    <div>
        <h1> {{ __("ccb.title") }} </h1>
        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            {{ radioButtons(
                'ccb',
                [
                    { value: 'yes', text:__('ccb.1')},
                    { value: 'no', text:__('ccb.2')},
                    { value: 'unsure', text:__('ccb.3')}
                ],
                data.ccb,
                __('form.ccb'),
                errors,
                {
                    required: true,
                    hint: __('ccb.hint'),
                    safeHint: true
                }
            )}}
            {{ formButtons() }}
        </form>
    </div>

{% endblock %}
