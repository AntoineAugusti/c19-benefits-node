{% extends "base.njk" %}

{% block content %}

    <div>
        {% include "../../views/_includes/header-link-question.njk" %}
        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            
            {{ radioButtons('why_stop_working', { 
                '1':'You’ve been laid off due to COVID-19.',
                '2':'Your employer has closed.',
                '3':'You’re self-employed and had to close.',
                '4': 'You’re on unpaid leave from your work.',
                '5': 'You quit or were let go due to unsafe working conditions.',
                '6': 'None of the above'
                }, data.why_stop_working, 'form.why_stop_working', errors, {hint: 'form.why_stop_working.desc'}, { required: true }) }}
            
            {{ formButtons() }}
        </form>
    </div>

{% endblock %}
