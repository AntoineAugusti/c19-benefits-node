{% extends "base.njk" %}
{% from 'banner.njk' import banner as banner %}

{% block content %}

    <h1>{{ __("results.title", benefits.length) }}</h1>

    {% if not data.lost_job %}
        <div>{{ banner('red', '<p>' + __('results.banner') + '</p>') }}</div>
    {% endif %}

    {% if benefits.length > 0 %}
    <p>
        {{ __("results.header_text") }}
    </p>
    <ul class="list-none">
        {% for benefit in benefits %}
            <li class="relative"><svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 -ml-8 mt-2 absolute left-0" viewBox="0 0 20 20"><path d="M10 .4C4.697.4.399 4.698.399 10A9.6 9.6 0 0 0 10 19.601c5.301 0 9.6-4.298 9.6-9.601 0-5.302-4.299-9.6-9.6-9.6zm-.001 17.2a7.6 7.6 0 1 1 0-15.2 7.6 7.6 0 1 1 0 15.2zM10 8H6v4h4v2.5l4.5-4.5L10 5.5V8z"/></svg> <a href="#{{benefit}}"> {{ __(benefit + ".header")}}</a></li>
        {% endfor %}
    </ul>
    {% endif %}
    <div class="mt-10">
        {% for benefit in benefits %}
            {% include "benefits/" + benefit + ".njk" %}
        {% endfor %}
    </div>

    <h2 class="text-3xl">{{ __('results.other_potential_help') }}</h2>

    <p>{{ __('results.other_potential_help.preamble') }}</p>

    <ul class="list-disc list-inside mt-4">
        <li><a href="#gst_credit"> {{ __("gst_credit.header")}}</a></li>
    </ul>
    <div class="mt-10">
        {% include "benefits/gst_credit.njk" %}
    </div>

{% endblock %}
