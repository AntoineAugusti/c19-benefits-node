{% extends "base.njk" %}
{% from 'banner.njk' import banner as banner %}

{% block content %}

    <h1>{{ __("results.title", benefits.length) }}</h1>

    {% if not data.lost_job %}
        <div>{{ banner('red', '<p>' + __('results.banner') + '</p>') }}</div>
    {% endif %}

    {% if benefits.length > 0 %}
    <p>
        {{ __("results.header_text") }}
    </p>
    <ul class="list-disc list-inside">
        {% for benefit in benefits %}
            <li><a href="#{{benefit}}"> {{ __(benefit + ".header")}}</a></li>
        {% endfor %}
    </ul>
    {% endif %}
    <div class="mt-10">
        {% for benefit in benefits %}
            {% include "benefits/" + benefit + ".njk" %}
        {% endfor %}
    </div>

    <h2 class="text-3xl">{{ __('results.other_potential_help') }}</h2>

    <p>{{ __('results.other_potential_help.preamble') }}</p>

    <ul class="list-disc list-inside mt-4">
        <li><a href="#gst_credit"> {{ __("gst_credit.header")}}</a></li>
    </ul>
    <div class="mt-10">
        {% include "benefits/gst_credit.njk" %}
    </div>

{% endblock %}
