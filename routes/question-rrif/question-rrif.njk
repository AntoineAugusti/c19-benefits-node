{% extends "base.njk" %}

{% block content %}

    {% include "../../views/_includes/header-link-question.njk" %}
    <div>
        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            {{ radioButtons('rrif',
                [
                    { value: 'yes', text:__('rrif.1')},
                    { value: 'no', text:__('rrif.2')}
                ],
                data.rrif,
                __('form.rrif'),
                errors,
                {
                    required: true
                }
            )}}
            {{ formButtons() }}
        </form>
    </div>

{% endblock %}
