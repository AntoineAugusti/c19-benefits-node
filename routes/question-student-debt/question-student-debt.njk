{% extends "base.njk" %}

{% block content %}

    <h1>{{ __("student_debt.title") }}</h1>
    <div>
        <form novalidate method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            {{ radioButtons('student_debt',
                [
                    { value: 'yes', text:__('student_debt.1')},
                    { value: 'no', text:__('student_debt.2')}
                ],
                data.student_debt,
                __('form.student_debt'),
                errors,
                { required: true })
            }}
            {{ formButtons() }}
        </form>
    </div>

{% endblock %}
