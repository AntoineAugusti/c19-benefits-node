{% macro formButtons(submitButtonText = 'Next', cancelUrl = '/clear') %}
    <div class="buttons">
        <div class="buttons--left next-button">
            <button class="py-3 px-4 border shadow" type="submit">{{ __(submitButtonText) }}</button>
        </div>
        <div class="buttons--right">
            <a class="button-link transparent full-width" href="{{ cancelUrl }}"><img src="/img/times-circle.svg" aria-hidden="true" /><span>{{ __('start_over') }}</span></a>
        </div>
    </div>
{% endmacro %}

{% macro linkButtons(confirmURL) %}
    <div class="buttons-row">
        <a href="{{ confirmURL }}">{{ __('Confirm') }}</a>
    </div>
{% endmacro %}