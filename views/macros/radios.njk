{% macro radioButtons(key, values, value, question, errors, attributes) %}
    <div class="{{ 'has-error' if errors and errors[key] }}">
        <fieldset class="fieldset">
            <legend class="fieldset__legend">
            <h1 class="border-none">
                {% if attributes.required %}
                    <span aria-hidden="true" class="required">*</span>
                {% endif %}
                {{ __(question) }}
                {% if attributes.required %}
                    <span class="required text-base">{{ __("required")}}</span>
                {% endif %}
            </h1>
            </legend>
            {% if attributes.hint %}
                <span class="form-message">{{ __(attributes.hint) | safe }}</span>
            {% endif %}
            <div class="multiple-choice multiple-choice--radios" id="{{ key }}">
                {% if errors and errors[key] %}
                    {{ validationMessage(errors[key].msg, key) }}
                {% endif %}
                {% for index, val in values %}
                    <div class="multiple-choice__item">
                        <input id="{{ key }}{{ index }}" name="{{ key }}" type="radio" value="{{ val }}" {% if value == val %} checked="checked" {% endif %} {% if errors and errors[key] %} aria-describedby="{{ key + '-error' }}" aria-invalid="true" {% endif %}>
                        <label for="{{ key }}{{ index }}">{{ __(val) }}</label>
                    </div>
                {% endfor %}
            </div>
        </fieldset>
    </div>
{% endmacro %}
